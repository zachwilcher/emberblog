<MdcCard data-test-message class="message-card" @outlined={{true}}>

  <MdcCardContent>
    <div data-test-message-sender>{{@message.sender}}</div>
    {{#if this.editable}}
      <MdcTextarea data-test-message-content-input @value={{@message.content}} />
    {{else}}
      <div data-test-message-content>{{@message.content}}</div>
    {{/if}}
  </MdcCardContent>

  <MdcCardActions>
    <MdcCardActionButtonLinkTo
      data-test-message-detailed-link
      @route="message"
      @model={{@message}}
      @label="Detailed"/>
    {{#if this.editable}}
      <MdcCardActionButton
        data-test-message-save-button
        @label="Save"
        {{on "click" this.update}}/>
    {{else}}
      <MdcCardActionButton
        data-test-message-edit-button
        @label="Edit"
        {{on "click" (fn this.setEditable true)}}/>
    {{/if}}
    <MdcCardActionButton
      data-test-message-delete-button
      @label="Delete"
      {{on "click" this.delete}}/>
  </MdcCardActions>
</MdcCard>
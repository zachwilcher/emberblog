<div data-test-message class="message">
  <p data-test-message-sender>
    {{@message.sender}}
  </p>
  <aside>
  {{#if this.editable}}
    <Input data-test-message-content-input @value={{@message.content}} />
  {{else}}
    <p data-test-message-content>
      {{@message.content}}
    </p>
  {{/if}}
  </aside>
  <MdcButtonLinkTo data-test-message-detailed-link @route="message" @model={{@message}} @label="Detailed" />

  {{#if this.canDelete}}
    <MdcButton data-test-message-delete-button @label="Delete" {{on "click" this.delete}} />
  {{/if}}
  {{#if this.canEdit}}
    {{#if this.editable}}
      <MdcButton data-test-message-save-button @label="Save" {{on "click" this.update}} />
    {{else}}
      <MdcButton data-test-message-edit-button @label="Edit" {{on "click" (fn this.setEditable true)}} />
    {{/if}}
  {{/if}}
</div>